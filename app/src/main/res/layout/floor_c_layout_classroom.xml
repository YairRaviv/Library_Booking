<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/floorCBackground"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/floor_c_background_classroom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="171dp"
                android:layout_height="59dp"
                android:background="@color/light_blue"
                android:gravity="center"
                android:text="Entrance"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="171dp"
                android:layout_height="59dp"
                android:background="@color/light_blue"
                android:gravity="center"
                android:text="Entrance"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="323dp"
                android:layout_height="213dp"
                android:background="@color/white"
                android:gravity="center"
                android:textSize="20dp"
                app:layout_constraintEnd_toStartOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="320dp"
                android:layout_height="480dp"
                android:background="@color/white"
                android:gravity="center"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="@+id/floorCBackground"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/floorC_classroom1"
                android:layout_width="248dp"
                android:layout_height="200dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/light_blue"
                android:onClick="classroomClick"
                app:layout_constraintBottom_toBottomOf="@+id/textView12"
                app:layout_constraintStart_toStartOf="@+id/textView12"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/floorC_classroom3"
                android:layout_width="299dp"
                android:layout_height="267dp"
                android:backgroundTint="@color/light_blue"
                android:onClick="classroomClick"
                app:layout_constraintBottom_toBottomOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="@+id/floorCBackground"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/floorC_classroom2" />

            <Button
                android:id="@+id/floorC_classroom2"
                android:layout_width="368dp"
                android:layout_height="200dp"
                android:backgroundTint="@color/light_blue"
                android:onClick="classroomClick"
                app:layout_constraintBottom_toBottomOf="@+id/floorC_classroom1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/floorC_classroom1"
                app:layout_constraintTop_toTopOf="@+id/floorC_classroom1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>
    <Button
        android:id="@+id/bookAllBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book All Selected"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.90"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="604dp"
        android:onClick="bookAllClick"/>


</androidx.constraintlayout.widget.ConstraintLayout>